---
export interface Props {
  name: string;
  strenght?: number;
}

const { name, strenght } = Astro.props;
const strengthPercentage = (strenght ?? 0) * 10;
---

<li
  class="flex font-mono mb-1 text-gray-200 text-sm leading-relaxed justify-between"
>
  <div>{name}</div>{
    strengthPercentage ? (
      <div class="rounded mb-3 top-[7px] bg-yellow-900 h-2 w-1/3 flex-shrink-0 relative flex">
        <div
          class="flex-grow flex-shrink-0 bg-yellow-500 rounded"
          style={{ "max-width": strengthPercentage + "%" }}
        />
      </div>
    ) : null
  }
</li>
